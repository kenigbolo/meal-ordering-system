<!DOCTYPE html>
<html>
  <head>
    <title>MealOrderingSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="particles.js"></script>
    <%= javascript_include_tag 'particles', 'app'%>
    
  </head>

  <body>
<!-- Insert Particles.js -->
<%= stylesheet_link_tag 'style'%>
<div id="particles-js"></div>
<%= javascript_include_tag 'particles', 'app'%>
<!-- End of Particles.js -->
  <div id="page-wrap">
  	<div class="container">
  		<div class="row">         
        
        <div class="col-md-2">
          <% unless current_user == nil %>
            <%= link_to "Home", orders_path, class: "btn btn-info btn-block" %>
          <% end %>
        </div> 

        <div class="col-md-4 col-md-offset-2">
          <div class="sign-up">
            <% if flash[:notice] %>
              <%= flash[:notice] %>
            <% end %> 
          </div>
        </div>

          
  			<% if current_user %>
          <div class="col-md-4">
            <!-- <div class="row"> -->
              <div class="col-md-4 left-div">
      				  <strong><%= current_user.name %></strong>
              </div>
            <div class="col-md-4 col-md-offset-4" >
    				  <%= link_to "Sign Out", signout_path, class: "btn btn-info btn-block" %>
            </div>
          <!-- </div> -->
    		<% else %>
          <div class="col-md-4">
    				<%= link_to "Facebook Sign in", "/auth/facebook", class: "btn btn-info btn-block" %>
            <%= link_to "Github Sign in", "/auth/github", class: "btn btn-info btn-block" %>
          </div>
        </div>
  			<% end %>

      </div>
  	</div>
  </div>

    <%= yield %>

  </body>
</html>
