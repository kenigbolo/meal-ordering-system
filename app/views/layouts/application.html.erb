<!DOCTYPE html>
<html>
  <head>
    <title>MealOrderingSystem</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
  	<div class="container">
  		<div class="row">         
        
        <div class="col-md-4">
          <div class="sign-up">
            <% if flash[:notice] %>
              <%= flash[:notice] %>
            <% end %> 
          </div>
        </div>

        <div>
          <%= link_to "Home", orders_path %>
        </div> 
          
        <div class="col-md-4 col-md-offset-8">
    			<% if current_user %>
    				Signed in as <strong><%= current_user.name %></strong>
    				<%= link_to "Sign Out", signout_path %>
    			<% else %>
    				<%= link_to "Facebook Sign in", "/auth/facebook" %>
            <%= link_to "Github Sign in", "/auth/github" %>
    			<% end %>
        </div>
  		</div>
  	</div>

    <%= yield %>

  </body>
</html>
