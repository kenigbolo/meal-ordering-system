<div class="row centered-form">
	<div class="panel panel-default">
	  <div class="panel-heading">
		<h3 class="panel-title"><strong>Create Order</strong></h3>
	  </div>
	  <div class="panel-body">

		<%= form_for @order, remote: true, url: {action: "create"}, html: {id: "new_order_form", class: "form-group"} do |f| %>
		  <%= f.label :restaurant %>:
		  <%= f.text_field :restaurant, class: "form-control input-sm" %>
		  <div class="panel-body"></div>
		  <%= hidden_field_tag 'id', current_user.id %>
		  <%= f.submit "Create", class: "btn btn-info btn-block" %>
		<% end %>

	  </div>
	</div>
</div>
