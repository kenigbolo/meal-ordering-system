<div class="container">
	<div class="row">
		<% if @can_add != false %>
		<h2>Add Meal</h2>
			<%= form_for @meal, remote: true, url: {action: "update"}, html: {id: "edit_order_form", class: "form-group"} do |f| %>
			  <%= f.text_field :name %>
			  <%= f.number_field :price %>
			  <%= f.submit "Add meal", class: "btn btn-info btn-block" %>
			<% end %>
		<% else %>
			<h5>You cannot add any more meals to this Order </h5>
		<% end %>

	</div>
</div>